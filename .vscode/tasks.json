{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Ansible Sanity Tests",
      "type": "shell",
      "command": "cd ~/.ansible/collections/ansible_collections/pfsensible/haproxy && ansible-test sanity --requirements --python 3.10",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "Run Ansible Unit Tests",
      "type": "shell",
      "command": "cd ~/.ansible/collections/ansible_collections/pfsensible/haproxy && ansible-test units --requirements --python 3.10",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Run PyCodeStyle Linting",
      "type": "shell",
      "command": "pycodestyle plugins/ tests/",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Build Ansible Collection",
      "type": "shell",
      "command": "ansible-galaxy collection build --force",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Install Collection Locally",
      "type": "shell",
      "command": "ansible-galaxy collection build --force && ansible-galaxy collection install pfsensible-haproxy-*.tar.gz --force",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    }
  ]
}
